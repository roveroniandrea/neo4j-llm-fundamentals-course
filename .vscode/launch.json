    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // I use the integrated terminal so I can prompt the LLMs
            "console": "integratedTerminal",
            // Allows to debug packages' code
            "justMyCode": false
        }
    ]
}